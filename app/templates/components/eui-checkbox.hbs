<input type="checkbox" checked={{value}} disabled={{disabled}} />

<div class="eui-component {{if disabled 'eui-disabled' 'eui-enabled'}}">
  <div class="eui-component-wrapper">
    <i class="eui-icon eui-icon--check"></i>
  </div>
</div>

{{yield}}

{{#if errorMessage}}
  <div class="eui-error-message">
    <div class="eui-error-wrapper">
      <p class="eui-error-text">
        {{errorMessage}}
      </p>
    </div>
  </div>
{{/if}}
