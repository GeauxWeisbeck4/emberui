<input type="checkbox" {{bind-attr checked=value disabled=disabled}} />

<div {{bind-attr class=":eui-component disabled:eui-disabled:eui-enabled"}}>
  <div class="eui-component-wrapper">
    <i class="eui-icon eui-icon--check"></i>
  </div>
</div>

{{label}}

{{#if errorMessage}}
  <div class="eui-error-message">
    <div class="eui-error-wrapper">
      <p class="eui-error-text">
        {{errorMessage}}
      </p>
    </div>
  </div>
{{/if}}
