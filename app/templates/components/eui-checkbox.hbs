<div {{bindAttr class=":eui-checkbox-form disabled:eui-disabled:eui-enabled"}}>
  <div class="eui-wrapper">
    <input type="checkbox" {{bindAttr value=value}} />
    <i class="eui-icon"></i>
  </div>
</div>

{{label}}

{{#if computedErrorMessage}}
  <div class="eui-error-message">
    <div class="eui-error-wrapper">
      <p>
        {{computedErrorMessage}}
      </p>
    </div>
  </div>
{{/if}}
