{{#eui-button
  disabled=disabled
  style=style
  size=size
  width='100%'
  classBinding=":eui-select selectClass showPopcal:eui-active"
  action="openCalendar"
  trailingIcon="eui-icon eui-icon--select"}}
  <div class="eui-selectdate-label {{if isPlaceholder 'eui-selectdate-placeholder'}}">
    {{label}}
  </div>
  <div class="eui-selectdate-icon"></div>
{{/eui-button}}

{{#if errorMessage}}
  <div class="eui-error-message">
    <div class="eui-error-wrapper">
      <p class="eui-error-text">
        {{errorMessage}}
      </p>
    </div>
  </div>
{{/if}}

{{#if showPopcal}}
  {{eui-popcal
    isOpen=showPopcal
    selection=selection
    dateRange=dateRange
    disablePast=disablePast
    disableFuture=disableFuture
    maxPastDate=maxPastDate
    maxFutureDate=maxFutureDate
    disabledDates=disabledDates
    style=calendarStyle
    selectionDidChange="onSelectionChange"
    animationStyle=animationStyle}}
{{/if}}
